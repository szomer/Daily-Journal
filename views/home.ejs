<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <header><%- include('./partials/header') %></header>

    <main>
      <div class="container my-4">
        <div class="row justify-content-center text-center">
          <div class="col-md-8">
            <h1 class="mb-4">Your Journal</h1>
            <p class="mb-2"><%= home %></p>
            <a class="btn btn-outline-info" href="/compose">
              New Journal Entry
            </a>
          </div>
        </div>

        <div
          class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center"
        >
          <% posts.forEach((post, i) => { %>
          <div class="col my-4">
            <div class="card m-2 h-100">
              <h3 class="card-header"><%= post.title %></h3>
              <form class="mx-3 mt-2" action="/post/<%= i %>" method="GET">
                <p class="card-body p-0">
                  <%if(post.content.length > 214){%>
                  <%=(post.content).substring(0,215) + '...'%> <%}else{%>
                  <%=post.content%> <%}%>
                </p>

                <button class="btn btn-outline-info" type="submit">
                  Read More
                </button>
              </form>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>

    <%- include('./partials/footer') %>
  </body>
</html>
